{
  "extends": "./tsconfig.build.json",

  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "declaration": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "__tests__",
    "__mocks__/**/*",
    "index.ts",
    "bin.ts",
    "src/lib/**/*",
    "spec/**/*",
    "src/**/*",
    "test/**/*",
    "types/**/*"
  ],
  "ts-node": {
    "files": true
  }
}
